# OpenCode Environment Variables
# Copy this file to .env and fill in your values
# The .env file is gitignored and will not be committed

# Perplexity API (for perplexity MCP server)
PERPLEXITY_API_KEY='pplx-your-key-here'

# GitHub Personal Access Token (for github MCP server)
GITHUB_PERSONAL_ACCESS_TOKEN='ghp_your-token-here'

# Brave Search API (for brave MCP server - optional)
BRAVE_API_KEY='your-brave-key-here'

# Obsidian Local REST API (for obsidian MCP server - optional)
OBSIDIAN_API_KEY='your-obsidian-key-here'
OBSIDIAN_HOST='http://localhost:27123'

# Firecrawl API (for research_scraper_firecrawl)
FIRECRAWL_API_KEY='fc-your-key-here'

# HackMD API (for integration_notes_hackmd)
HACKMD_API_TOKEN='your-hackmd-token'

# Qdrant Vector DB (for memory_vector_qdrant)
QDRANT_URL='https://your-qdrant-cluster.qdrant.tech'
QDRANT_API_KEY='your-qdrant-key'

# SearXNG (for research_search_searxng)
SEARXNG_BASE_URL='http://localhost:8080'

# AIO MCP Integrations (Optional - leave blank if unused)
# The server will likely disable specific tools if these are missing
GITLAB_TOKEN=''
JIRA_API_TOKEN=''
YOUTUBE_API_KEY=''
