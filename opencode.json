{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "AGENTS.md",
    "docs/SYSTEM_CONTEXT.md",
    "docs/MCP_TOOLS.md"
  ],
  "model": "github-copilot/claude-sonnet-4.5",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@dolasoft/stdio-context7-mcp-server"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
      "timeout": 10000
    },
    "brave": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "BRAVE_API_KEY",
        "mcp/brave-search"
      ],
      "environment": {
        "BRAVE_API_KEY": "dummy-key-not-used"
      },
      "enabled": false,
      "timeout": 10000
    },
    "duckduckgo": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/duckduckgo"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "fetch": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/fetch"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "sequential_thinking": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/sequentialthinking"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-v",
        "/Users/fabiofalopes/mcp-memory:/data",
        "mcp/memory"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "wikipedia": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/wikipedia-mcp"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "code_interpreter": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-v",
        "/Users/fabiofalopes/mcp-code:/workspace",
        "mcp/mcp-code-interpreter"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "enabled": false,
      "timeout": 10000
    },
    "perplexity": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "PERPLEXITY_API_KEY",
        "mcp/perplexity-ask"
      ],
      "environment": {
        "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}"
      },
      "enabled": true,
      "timeout": 10000
    },
    "obsidian": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "OBSIDIAN_HOST",
        "-e",
        "OBSIDIAN_API_KEY",
        "mcp/obsidian"
      ],
      "environment": {
        "OBSIDIAN_HOST": "host.docker.internal",
        "OBSIDIAN_API_KEY": "YOUR_OBSIDIAN_API_KEY"
      },
      "enabled": false,
      "timeout": 10000
    },
    "arxiv": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "ARXIV_STORAGE_PATH",
        "-v",
        "/Users/fabiofalopes/arxiv-papers:/papers",
        "mcp/arxiv-mcp-server"
      ],
      "environment": {
        "ARXIV_STORAGE_PATH": "/papers"
      },
      "enabled": true,
      "timeout": 10000
    },
    "paper_search": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/paper-search"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "hackernews": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/hackernews-mcp"
      ],
      "enabled": true,
      "timeout": 10000
    }
  },
  "tools": {
    "context7": true,
    "gh_grep": true,
    "brave": false,
    "duckduckgo": true,
    "fetch": true,
    "sequential_thinking": true,
    "memory": true,
    "wikipedia": true,
    "code_interpreter": true,
    "github": false,
    "perplexity": true,
    "obsidian": false,
    "arxiv": true,
    "paper_search": true,
    "hackernews": true
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  },
  "agent": {
    "build": {
      "description": "Full-featured development agent with all tools enabled",
      "mode": "primary",
      "temperature": 0.3,
      "model": "github-copilot/claude-sonnet-4.5",
      "tools": {
        "context7": true,
        "gh_grep": true,
        "fetch": true,
        "wikipedia": true,
        "duckduckgo": true,
        "memory": true,
        "code_interpreter": true,
        "sequential_thinking": true,
        "arxiv": true,
        "paper_search": true,
        "hackernews": true
      },
      "permission": {
        "edit": "allow",
        "bash": "allow",
        "webfetch": "allow"
      }
    },
    "plan": {
      "description": "Planning and analysis agent without file modifications",
      "mode": "primary",
      "temperature": 0.1,
      "model": "github-copilot/claude-haiku-4.5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "context7": true,
        "gh_grep": true,
        "fetch": true,
        "wikipedia": true,
        "duckduckgo": true,
        "memory": true,
        "sequential_thinking": true,
        "arxiv": true,
        "paper_search": true,
        "hackernews": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow"
      }
    },
    "code": {
      "description": "Code-focused agent for development with GitHub integration",
      "mode": "subagent",
      "temperature": 0.2,
      "model": "github-copilot/gpt-5.1-codex",
      "tools": {
        "gh_grep": true,
        "code_interpreter": true,
        "github": true,
        "context7": true
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "git *": "ask",
          "npm *": "allow",
          "yarn *": "allow",
          "bun *": "allow",
          "python *": "allow",
          "*": "ask"
        },
        "webfetch": "deny"
      }
    },
    "research": {
      "description": "Research-focused agent for documentation and information gathering",
      "mode": "subagent",
      "temperature": 0.2,
      "model": "github-copilot/claude-opus-4.5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "context7": true,
        "gh_grep": true,
        "fetch": true,
        "wikipedia": true,
        "duckduckgo": true,
        "memory": true,
        "sequential_thinking": true,
        "arxiv": true,
        "paper_search": true,
        "brave": true,
        "perplexity": true,
        "hackernews": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow"
      }
    },
    "thinking": {
      "description": "Problem-solving agent using structured reasoning and memory",
      "mode": "subagent",
      "temperature": 0.1,
      "model": "github-copilot/claude-sonnet-4.5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "sequential_thinking": true,
        "memory": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "deny"
      }
    },
    "deep": {
      "description": "Analyze-first builder with balanced agency - thinks before acting, acts decisively",
      "mode": "primary",
      "temperature": 0.3,
      "model": "github-copilot/claude-sonnet-4.5",
      "tools": {
        "context7": true,
        "gh_grep": true,
        "fetch": true,
        "wikipedia": true,
        "duckduckgo": true,
        "memory": true,
        "code_interpreter": true,
        "sequential_thinking": true,
        "arxiv": true,
        "paper_search": true,
        "hackernews": true
      },
      "permission": {
        "edit": "allow",
        "bash": "allow",
        "webfetch": "allow"
      }
    },
    "know": {
      "description": "Knowledge-builder for research workflows and structured knowledge accumulation",
      "mode": "primary",
      "temperature": 0.2,
      "model": "github-copilot/claude-haiku-4.5",
      "tools": {
        "write": true,
        "edit": false,
        "bash": false,
        "context7": true,
        "gh_grep": true,
        "fetch": true,
        "wikipedia": true,
        "duckduckgo": true,
        "memory": true,
        "sequential_thinking": true,
        "arxiv": true,
        "paper_search": true,
        "hackernews": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow"
      }
    }
  },
  "formatter": {
    "prettier": {
      "disabled": false
    },
    "biome": {
      "disabled": false
    }
  }
}