{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-google-antigravity-auth"],
  "instructions": [
    "AGENTS.md",
    "docs/SYSTEM_CONTEXT.md",
    "docs/MCP_TOOLS.md"
  ],
  "model": "github-copilot/claude-sonnet-4.5",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@dolasoft/stdio-context7-mcp-server"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
      "timeout": 10000
    },
    "brave": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "BRAVE_API_KEY",
        "mcp/brave-search"
      ],
      "environment": {
        "BRAVE_API_KEY": "dummy-key-not-used"
      },
      "enabled": false,
      "timeout": 10000
    },
    "duckduckgo": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/duckduckgo"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "fetch": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/fetch"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "sequential_thinking": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/sequentialthinking"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-v",
        "/Users/fabiofalopes/mcp-memory:/data",
        "mcp/memory"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "wikipedia": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/wikipedia-mcp"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "code_interpreter": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-v",
        "/Users/fabiofalopes/mcp-code:/workspace",
        "mcp/mcp-code-interpreter"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "enabled": false,
      "timeout": 10000
    },
    "perplexity": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "PERPLEXITY_API_KEY",
        "mcp/perplexity-ask"
      ],
      "environment": {
        "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}"
      },
      "enabled": true,
      "timeout": 10000
    },
    "obsidian": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "OBSIDIAN_HOST",
        "-e",
        "OBSIDIAN_API_KEY",
        "mcp/obsidian"
      ],
      "environment": {
        "OBSIDIAN_HOST": "host.docker.internal",
        "OBSIDIAN_API_KEY": "YOUR_OBSIDIAN_API_KEY"
      },
      "enabled": false,
      "timeout": 10000
    },
    "arxiv": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "ARXIV_STORAGE_PATH",
        "-v",
        "/Users/fabiofalopes/arxiv-papers:/papers",
        "mcp/arxiv-mcp-server"
      ],
      "environment": {
        "ARXIV_STORAGE_PATH": "/papers"
      },
      "enabled": true,
      "timeout": 10000
    },
    "paper_search": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/paper-search"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "hackernews": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "mcp/hackernews-mcp"
      ],
      "enabled": true,
      "timeout": 10000
    }
