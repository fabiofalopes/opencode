{
  "wikipedia": {
    "type": "local",
    "command": [
      "docker",
      "run",
      "-i",
      "--rm",
      "mcp/wikipedia-mcp"
    ],
    "enabled": true,
    "timeout": 10000
  },
  "arxiv": {
    "type": "local",
    "command": [
      "docker",
      "run",
      "-i",
      "--rm",
      "-e",
      "ARXIV_STORAGE_PATH",
      "-v",
      "/home/fabio/arxiv-papers:/papers",
      "mcp/arxiv-mcp-server"
    ],
    "environment": {
      "ARXIV_STORAGE_PATH": "/papers"
    },
    "enabled": true,
    "timeout": 10000
  },
  "paper_search": {
    "type": "local",
    "command": [
      "docker",
      "run",
      "-i",
      "--rm",
      "mcp/paper-search"
    ],
    "enabled": true,
    "timeout": 10000
  },
  "hackernews": {
    "type": "local",
    "command": [
      "docker",
      "run",
      "-i",
      "--rm",
      "mcp/hackernews-mcp"
    ],
    "enabled": true,
    "timeout": 10000
  },
  "research_scraper_firecrawl": {
    "type": "local",
    "command": [
      "docker",
      "run",
      "-i",
      "--rm",
      "-e",
      "FIRECRAWL_API_KEY",
      "mcp/firecrawl"
    ],
    "environment": {
      "FIRECRAWL_API_KEY": "{env:FIRECRAWL_API_KEY}"
    },
    "enabled": true,
    "timeout": 60000
  },
  "research_search_searxng": {
    "type": "local",
    "command": [
      "docker",
      "run",
      "-i",
      "--rm",
      "--network",
      "host",
      "-e",
      "SEARXNG_ENGINE_API_BASE_URL",
      "overtlids/mcp-searxng-enhanced"
    ],
    "environment": {
      "SEARXNG_ENGINE_API_BASE_URL": "{env:SEARXNG_BASE_URL}"
    },
    "enabled": true,
    "timeout": 30000
  },
  "research_browser_rag": {
    "type": "local",
    "command": [
      "npx",
      "-y",
      "@apify/mcp-server-rag-web-browser"
    ],
    "environment": {
      "APIFY_TOKEN": "{env:APIFY_TOKEN}"
    },
    "enabled": false,
    "timeout": 30000
  }
}
